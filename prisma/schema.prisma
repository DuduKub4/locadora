generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://prisma:prisma@localhost:5432/locadora?schema=public"
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  name       String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  movieRents MovieRent[] @relation("UserMovieRent")

  @@map("users")
}

model Movie {
  id           String      @id @default(uuid())
  title        String      @unique
  duration     Int
  release_date DateTime
  movieRents   MovieRent[] @relation("MovieMovieRent")

  @@map("movies")
}

model MovieRent {
  id       String   @id @default(uuid())
  user     User     @relation("UserMovieRent", fields: [userId], references: [id])
  userId   String
  movie    Movie    @relation("MovieMovieRent", fields: [movieId], references: [id])
  movieId  String
  createdAt DateTime @default(now())

  @@index([userId, movieId], name: "idx_user_movie")
  @@map("movie_rent")
}
